@model IEnumerable<BikeApp.Models.UsersAndBike>

@{
    ViewBag.Title = "Index";
}

<h2>Users and Bikes information Page:</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form asp-controller="UsersAndBikes" asp-action="filterUser">
    <p>
        User Name: <input type="text" name="SearchString">
        <input type="submit" value="Search" />
    </p>
</form>
<form asp-controller="UsersAndBikes" asp-action="filterBike">
    <p>
        Bike Model: <input type="text" name="SearchString">
        <input type="submit" value="Search" />
    </p>
</form>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BikeModel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BikeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StardDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BikeModel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BikeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StardDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
